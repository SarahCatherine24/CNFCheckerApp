<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e2e2e"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="String and Grammar Checker"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/grammarProductions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:paddingBottom="16dp"/>

        <EditText
            android:id="@+id/stringInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter string"
            android:background="#333"
            android:textColor="#ffffff"
            android:padding="8dp"
            android:enabled="false"/>

        <Button
            android:id="@+id/checkStringBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check String"
            android:background="#ff79c6"
            android:textColor="#2e2e2e"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:enabled="false"/>

        <Button
            android:id="@+id/checkGrammarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Grammar"
            android:background="#ff79c6"
            android:textColor="#2e2e2e"
            android:padding="10dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:paddingTop="16dp"/>

    </LinearLayout>

</RelativeLayout>
